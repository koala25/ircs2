<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="200dp"
                android:background="@drawable/login_wave"

                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:src="@drawable/email_icon" />

                    <EditText
                        android:id="@+id/mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/roundborder"
                        android:hint="Email Address"
                        android:inputType="text"
                        android:letterSpacing="0.1"
                        android:padding="16dp"
                        android:textColor="#475269"
                        android:textColorHint="#475269"
                        android:textSize="16dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#000000"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="50dp"

                        android:src="@drawable/password_icon" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/roundborder"
                        android:hint="Password"
                        android:padding="16dp"
                        android:inputType="textPassword"
                        android:letterSpacing="0.1"
                        android:textColor="#475269"
                        android:textColorHint="#475269"
                        android:textSize="16dp" />
                </LinearLayout>





            </LinearLayout>

            <TextView

                android:id="@+id/sup"
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="30dp"

                android:layout_marginBottom="10dp"

                android:background="@drawable/round_bg"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:onClick="Onclick_submit"
                android:padding="16dp"
                android:text="Login"
                android:textColor="#d9e5f3"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/lin"
                android:layout_width="316dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:background="@drawable/round_bg"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:onClick="onclick_Create_newAccount"
                android:padding="16dp"
                android:text="Create new account"
                android:textColor="#d9e5f3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--<com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"

                android:layout_marginBottom="10dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"

                android:textSize="18sp" />-->



            <!--<com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:onClick="onClickGoogle_Signup"
                android:paddingTop="16dp"
                android:paddingBottom="16dp" />
                -->

        </LinearLayout>


    </LinearLayout>


</ScrollView>